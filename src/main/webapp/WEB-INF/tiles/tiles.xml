<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
    "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
    "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<!-- 기본 템플릿 (navbar / header/ footer) -->

	<definition name="basic"
		template="/WEB-INF/tiles/layout/basicTemplate.jsp">

		<put-attribute name="headResources"
			value="/WEB-INF/tiles/source/headResources.jsp" />


		<put-attribute name="navbar"
			value="/WEB-INF/tiles/component/navbar.jsp" />


		<put-attribute name="footer"
			value="/WEB-INF/tiles/component/footer.jsp" />

		<put-attribute name="footResources"
			value="/WEB-INF/tiles/source/footResources.jsp" />
			
			
	</definition>
	

	<definition name="*/*" extends="basic">
		<put-attribute name="content"
			value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>





</tiles-definitions>